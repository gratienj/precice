<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <solver-interface dimensions="2">
    <data:scalar name="DataAB" />
    <data:scalar name="DataBA" />
    <data:scalar name="DataBC" />
    <data:scalar name="DataCB" />
    <data:scalar name="DataCD" />
    <data:scalar name="DataDC" />

    <mesh name="MeshA">
      <use-data name="DataAB" />
      <use-data name="DataBA" />
    </mesh>

    <mesh name="MeshB1">
      <use-data name="DataAB" />
      <use-data name="DataBA" />
    </mesh>

    <mesh name="MeshB2">
      <use-data name="DataBC" />
      <use-data name="DataCB" />
    </mesh>

    <mesh name="MeshC1">
      <use-data name="DataBC" />
      <use-data name="DataCB" />
    </mesh>

    <mesh name="MeshC2">
      <use-data name="DataCD" />
      <use-data name="DataDC" />
    </mesh>

    <mesh name="MeshD">
      <use-data name="DataCD" />
      <use-data name="DataDC" />
    </mesh>

    <participant name="SolverA">
      <use-mesh name="MeshA" provide="yes" />
      <write-data name="DataAB" mesh="MeshA" />
      <read-data name="DataBA" mesh="MeshA" />
    </participant>

    <participant name="SolverB">
      <use-mesh name="MeshA" from="SolverA" />
      <use-mesh name="MeshC1" from="SolverC" />
      <use-mesh name="MeshB1" provide="yes" />
      <use-mesh name="MeshB2" provide="yes" />
      <use-mesh name="MeshD" from="SolverD"/>
      
      <write-data name="DataBA" mesh="MeshB1" />
      <write-data name="DataBC" mesh="MeshB2" />
      
      <read-data name="DataAB" mesh="MeshB1" />
      <read-data name="DataCB" mesh="MeshB2" />

      <mapping:nearest-neighbor direction="read" from="MeshA" to="MeshB1" constraint="conservative" />
      <mapping:nearest-neighbor direction="write" from="MeshB1" to="MeshA" constraint="consistent" />

      <mapping:nearest-neighbor direction="read" from="MeshC1" to="MeshB2" constraint="conservative" />
      <mapping:nearest-neighbor direction="write" from="MeshB2" to="MeshC1" constraint="consistent" />
    </participant>

    <participant name="SolverC">
      <use-mesh name="MeshD" from="SolverD" />
      <use-mesh name="MeshC1" provide="yes" />
      <use-mesh name="MeshC2" provide="yes" />
      
      <write-data name="DataCB" mesh="MeshC1" />
      <write-data name="DataCD" mesh="MeshC2" />
      
      <read-data name="DataBC" mesh="MeshC1" />
      <read-data name="DataDC" mesh="MeshC2" />

      <mapping:nearest-neighbor direction="read" from="MeshD" to="MeshC2" constraint="conservative" />
      <mapping:nearest-neighbor direction="write" from="MeshC2" to="MeshD" constraint="consistent" />
    </participant>

    <participant name="SolverD">
      <use-mesh name="MeshD" provide="yes" />
      <write-data name="DataCD" mesh="MeshD" />
      <read-data name="DataDC" mesh="MeshD" />
    </participant>

    <m2n:sockets from="SolverA" to="SolverB" />
    <m2n:sockets from="SolverB" to="SolverC" />
    <m2n:sockets from="SolverC" to="SolverD" />
    <m2n:sockets from="SolverD" to="SolverB" />

    <coupling-scheme:multi>
      <participant name="SolverA" />
      <participant name="SolverB" control="yes"/>
      <participant name="SolverC" />
      <participant name="SolverD" />
      <max-time-windows value="10" />
      <time-window-size value="1.0" />
      <max-iterations value="2" />
      <exchange data="DataAB" mesh="MeshA" from="SolverA" to="SolverB" />
      <exchange data="DataBA" mesh="MeshA" from="SolverB" to="SolverA" />
      <exchange data="DataCD" mesh="MeshD" from="SolverC" to="SolverD" />
      <exchange data="DataDC" mesh="MeshD" from="SolverD" to="SolverC" />
      <exchange data="DataBC" mesh="MeshC1" from="SolverB" to="SolverC" />
      <exchange data="DataCB" mesh="MeshC1" from="SolverC" to="SolverB" />
      <relative-convergence-measure data="DataBA" mesh="MeshA" limit="1e-4" />
      <relative-convergence-measure data="DataBC" mesh="MeshC1" limit="1e-4" />
      <relative-convergence-measure data="DataCD" mesh="MeshD" limit="1e-4" />
    </coupling-scheme:multi>
  </solver-interface>
</precice-configuration>
