#pragma once

#define PRECICE_VERSION "@preCICE_VERSION@"
#define PRECICE_VERSION_MAJOR @preCICE_VERSION_MAJOR@
#define PRECICE_VERSION_MINOR @preCICE_VERSION_MINOR@
#define PRECICE_VERSION_PATCH @preCICE_VERSION_PATCH@

#define PRECICE_VERSION_GTE(major, minor, patch) (PRECICE_VERSION_MAJOR > major || (PRECICE_VERSION_MAJOR >= major &&                                    \
                                                                                    (PRECICE_VERSION_MINOR > minor || (PRECICE_VERSION_MINOR >= minor && \
                                                                                                                       PRECICE_VERSION_PATCH >= patch))))

#ifndef PRECICE_NO_PETSC
  #define PETSC_MAJOR @PETSc_VERSION_MAJOR@
  #define PETSC_MINOR @PETSc_VERSION_MINOR@
#endif

